# Install destination and configuration information

MAS_USER ?= @MAS_USER@
MAS_GROUP ?= @MAS_GROUP@

mas_base_install: $(MAS_INSTALL_BIN) $(MAS_INSTALL_LIB) $(MAS_INSTALL_INC) $(MAS_INSTALL_SWIG) $(MAS_INSTALL_PYTHON)

$(MAS_INSTALL_BIN):
	install -m u+rwx,g+rx,o+rx --owner=$(MAS_USER) --group=$(MAS_GROUP) \
		-d $(MAS_INSTALL_BIN)

$(MAS_INSTALL_LIB):
	install -m u+rwx,g+rx,o+rx --owner=$(MAS_USER) --group=$(MAS_GROUP) \
		-d $(MAS_INSTALL_LIB)

$(MAS_INSTALL_INC):
	install -m u+rwx,g+rx,o+rx --owner=$(MAS_USER) --group=$(MAS_GROUP) \
		-d $(MAS_INSTALL_INC)

ifneq "$(MAS_INSTALL_SWIG)" "$(MAS_INSTALL_PYTHON)"

$(MAS_INSTALL_SWIG):
	install -m u+rwx,g+rx,o+rx --owner=$(MAS_USER) --group=$(MAS_GROUP) \
		-d $(MAS_INSTALL_SWIG)

endif

$(MAS_INSTALL_PYTHON):
	install -m u+rwx,g+rx,o+rx --owner=$(MAS_USER) --group=$(MAS_GROUP) \
		-d $(MAS_INSTALL_PYTHON)

mas_bin_install: mas_base_install
