# Program names from configure script
CC= @CC@

# Compilation options from configure script
MAKE_DRIVER=@DO_MAS_DRIVER@
MAKE_SWIG=@DO_MAS_SWIG@

# Set up the sets of folders to recurse into for each target
all_dirs = interfaces applications config
clean_dirs = interfaces applications swig
install_dirs = include interfaces applications scripts config

# Set up dependencies for each target
all_deps = Makefile defaults/config.h
clean_deps = clean_driver
install_deps = all

ifeq ($(MAKE_SWIG),yes)
all_dirs += swig
install_dirs += swig
endif

ifeq ($(MAKE_DRIVER),yes)
all_deps += make_driver
install_deps += install_driver
endif

# Target definitions.  This should be a loop or something...

default: all

all: $(all_deps)
	for d in $(all_dirs); do make -C $$d || exit 1; done

clean: $(clean_deps)
	for d in $(clean_dirs); do make -C $$d clean || exit 1; done

install: $(install_deps)
	for d in $(install_dirs); do make -C $$d install || exit 1; done

.PHONY: default all clean install

# configuration rules

.PRECIOUS: Makefile
Makefile: config.status Makefile.in
	$(SHELL) ./config.status $@

config.status: configure
	$(SHELL) ./config.status --recheck

configure: configure.in
	autoconf -o $@ $<

defaults/config.h: config.status defaults/config.h.in
	$(SHELL) ./config.status $@

defaults/config.h.in: configure.in
	autoheader $<

# Supporting targets; driver needs some hand-holding...

make_driver:
	cd driver; make

clean_driver:
	cd driver; make clean

install_driver:
	cd driver; make install

.PHONY: make_driver clean_driver install_driver
